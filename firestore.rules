
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Settings are public-read, but writeable only by admins
    match /settings/{docId} {
      allow read: if true;
      // Only users with the 'admin' role can write to settings.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow authenticated users to read all main content and subcollections
    match /executiveMessages/{messageId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;

      match /comments/{commentId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
      }
      match /likes/{userId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
       match /views/{userId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
      }
    }

    match /videos/{videoId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;

      match /comments/{commentId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
      }
      match /likes/{userId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
      match /views/{userId} {
        allow get: if request.auth != null;
        allow list: if request.auth != null;
      }
    }

    // You should also define rules for your other collections like users, goals, etc.
    // For now, keeping a broad rule for development, but more specific rules are recommended for production.
    match /{document=**} {
      // This rule will be used for collections not explicitly defined above.
      // For development, it's open, but it's not secure.
      allow read, write: if request.auth != null;
    }
  }
}
