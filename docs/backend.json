
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the Philos application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier from Firebase Authentication."
        },
        "displayName": {
          "type": "string",
          "description": "User's full name."
        },
        "employeeId": {
          "type": "string",
          "description": "The user's employee ID number."
        },
        "company": {
          "type": "string",
          "description": "The company the user belongs to."
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL for the user's avatar image."
        },
        "role": {
          "type": "string",
          "description": "User's role in the organization.",
          "enum": [
            "employee",
            "manager",
            "executive",
            "admin"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was last updated."
        }
      },
      "required": [
        "uid",
        "email",
        "displayName",
        "role",
        "createdAt",
        "updatedAt"
      ]
    },
    "ExecutiveMessage": {
      "title": "Executive Message",
      "description": "A message from the executive team.",
      "type": "object",
      "properties": {
        "authorId": {
          "type": "string",
          "description": "The UID of the author."
        },
        "authorName": {
          "type": "string",
          "description": "The display name of the author."
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": [
            "normal",
            "high"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "likesCount": {
          "type": "number",
          "description": "Aggregated number of likes from the 'likes' subcollection."
        },
        "commentsCount": {
          "type": "number",
          "description": "Aggregated number of comments from the 'comments' subcollection."
        },
        "viewsCount": {
          "type": "number",
          "description": "Number of views."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "authorId",
        "authorName",
        "title",
        "content",
        "priority",
        "createdAt",
        "updatedAt",
        "likesCount",
        "commentsCount",
        "viewsCount"
      ]
    },
    "Comment": {
      "title": "Comment",
      "description": "A comment on a post or message.",
      "type": "object",
      "properties": {
        "authorId": {
          "type": "string"
        },
        "authorName": {
          "type": "string",
          "description": "Display name of the comment's author."
        },
        "content": {
          "type": "string"
        },
        "parentCommentId": {
          "type": [
            "string",
            "null"
          ],
          "description": "ID of the parent comment if this is a reply. Null for top-level comments."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "authorId",
        "authorName",
        "content",
        "createdAt"
      ]
    },
    "Like": {
      "title": "Like",
      "description": "Represents a 'like' action from a user on an item.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user who liked the item."
        },
        "likedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the like was given."
        }
      },
      "required": [
        "userId",
        "likedAt"
      ]
    },
    "Video": {
      "title": "Video",
      "description": "A video content item.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "src": {
          "type": "string",
          "description": "URL to the video file in Cloud Storage."
        },
        "thumbnailUrl": {
          "type": "string",
          "description": "URL to the video thumbnail image."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "uploaderId": {
          "type": "string"
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time"
        },
        "likesCount": {
          "type": "number",
          "description": "Aggregated number of likes from the 'likes' subcollection."
        },
        "commentsCount": {
          "type": "number",
          "description": "Aggregated number of comments from the 'comments' subcollection."
        },
        "viewsCount": {
          "type": "number"
        }
      },
      "required": [
        "title",
        "description",
        "src",
        "thumbnailUrl",
        "uploaderId",
        "uploadedAt",
        "likesCount",
        "commentsCount",
        "viewsCount"
      ]
    },
    "PhilosophyItem": {
      "title": "Philosophy Item",
      "description": "A single item representing a company philosophy, vision, or value.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the item."
        },
        "content": {
          "type": "string",
          "description": "The detailed content of the item."
        },
        "icon": {
          "type": "string",
          "description": "The name of the Lucide icon to display."
        },
        "category": {
          "type": "string",
          "description": "The category for grouping items.",
          "enum": ["mission_vision", "values"]
        },
        "order": {
          "type": "number",
          "description": "A number to determine the display order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["title", "content", "icon", "category", "order", "createdAt", "updatedAt"]
    },
     "CalendarDisplaySettings": {
      "title": "Calendar Display Settings",
      "description": "Settings for how content is displayed on the user-facing calendar.",
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["daily", "fixed"],
          "description": "The display mode for the calendar content. 'daily' for rotating content, 'fixed' for a single item over a period."
        },
        "activeContentId": {
          "type": ["string", "null"],
          "description": "The ID of the philosophy item to display when mode is 'fixed'."
        },
        "fixedEndDate": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "The end date for the 'fixed' mode."
        },
        "dailyLoopCounter": {
          "type": "number",
          "description": "A counter to keep track of the current item in the 'daily' rotation."
        }
      },
      "required": ["mode", "dailyLoopCounter"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores profile information for each user, keyed by their Firebase Auth UID."
    },
    "/executiveMessages/{messageId}": {
      "schema": {
        "$ref": "#/entities/ExecutiveMessage"
      },
      "description": "Stores messages from the executive team."
    },
    "/executiveMessages/{messageId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/entities/Comment"
      },
      "description": "Stores comments on executive messages."
    },
    "/executiveMessages/{messageId}/likes/{userId}": {
      "schema": {
        "$ref": "#/entities/Like"
      },
      "description": "Stores likes on executive messages, keyed by user UID."
    },
    "/videos/{videoId}": {
      "schema": {
        "$ref": "#/entities/Video"
      },
      "description": "Stores video content information."
    },
    "/videos/{videoId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/entities/Comment"
      },
      "description": "Stores comments on videos."
    },
    "/videos/{videoId}/likes/{userId}": {
      "schema": {
        "$ref": "#/entities/Like"
      },
      "description": "Stores likes on videos, keyed by user UID."
    },
    "/philosophy/{philosophyId}": {
        "schema": {
            "$ref": "#/entities/PhilosophyItem"
        },
        "description": "Stores company philosophy, vision, and value items."
    },
    "/settings/calendarDisplay": {
        "schema": {
            "$ref": "#/entities/CalendarDisplaySettings"
        },
        "description": "Stores the display settings for the user-facing calendar."
    }
  }
}
